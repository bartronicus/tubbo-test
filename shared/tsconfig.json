{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",
  "ts-node": {
    "preferTsExts": true
  },

  "compilerOptions": {
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "declaration": true,
    "incremental": true,
    "lib": ["es2020", "dom"],
    "module": "CommonJS",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "stripInternal": false,
    "target": "ES2020",
    "composite": false,
    "outDir": "lib"
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.d.ts"]
}
